<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF181743">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stback" />

        <ImageView
            android:id="@+id/st03"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@id/st04"
            android:layout_alignLeft="@id/st04"
            android:onClick="clickBtn"
            android:src="@drawable/st03" />

        <ImageView
            android:id="@+id/st04"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:onClick="clickBtn"
            android:src="@drawable/st04" />

        <ImageView
            android:id="@+id/st05"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@id/st04"
            android:layout_alignLeft="@id/st04"
            android:onClick="clickBtn"
            android:src="@drawable/st05" />

        <ImageView
            android:id="@+id/qicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/qicon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick="clickBtn"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:id="@+id/layout05"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/howtogame"/>

            <ImageView
                android:id="@+id/exb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/exb"
                android:onClick="clickBtn"
                android:layout_marginRight="30dp"
                android:layout_marginTop="59dp"/>


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout02"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF181743"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="10"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/fontstyle"
                android:text="숫자야구게임"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ss1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="랜덤값"
                    android:textColor="#FFFFFFFF" />

                <TextView
                    android:id="@+id/ss2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="ss"
                    android:textColor="#FFFFFFFF" />

                <TextView
                    android:id="@+id/ss3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="sss"
                    android:textColor="#FFFFFFFF" />


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:background="#FFEBF3FE"
                >

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:id="@+id/list01"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="24sp"
                    android:textColor="#FF181743"
                    android:fontFamily="@font/fontstyle"

                    />

                <TextView
                    android:id="@+id/list02"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="24sp"
                    android:textColor="#FF181743"
                    android:fontFamily="@font/fontstyle"

                    />

                <TextView
                    android:id="@+id/list03"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="24sp"
                    android:textColor="#FF181743"
                    android:fontFamily="@font/fontstyle"

                    />



<!--                    <TextView-->
<!--                        android:id="@+id/list01"-->
<!--                        android:gravity="center"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:text="게임시작~"-->
<!--                        android:textColor="#FF181743"-->
<!--                        android:textStyle="bold" />-->


                </LinearLayout>



            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="#FFEBF3FE"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1라운드"
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/fontstyle"
                    />


                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ball02"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/tv02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ball02"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/tv03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ball02"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fontstyle"
                    android:textSize="50sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="6">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c01" />

                    <ImageView
                        android:id="@+id/s01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s01"
                        android:visibility="invisible" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c02" />

                    <ImageView
                        android:id="@+id/s02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s02"
                        android:visibility="invisible" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c03" />

                    <ImageView
                        android:id="@+id/s03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s03"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c04" />

                    <ImageView
                        android:id="@+id/s04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s04"
                        android:visibility="invisible" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c05" />

                    <ImageView
                        android:id="@+id/s05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s05"
                        android:visibility="invisible" />

                </RelativeLayout>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ch01" />

                    <ImageView
                        android:id="@+id/ch02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ch02"
                        android:visibility="invisible" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="6">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c06"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c06" />

                    <ImageView
                        android:id="@+id/s06"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s06"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c07"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c07" />

                    <ImageView
                        android:id="@+id/s07"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s07"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c08"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c08" />

                    <ImageView
                        android:id="@+id/s08"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s08"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c09"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c09" />

                    <ImageView
                        android:id="@+id/s09"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s09"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/c00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/c00" />

                    <ImageView
                        android:id="@+id/s00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s00"
                        android:visibility="invisible" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/ch03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ch03" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FF181743">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gameover"
           />

        <ImageView
            android:id="@+id/home01"
            android:onClick="home"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout04"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF181743">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gameclear"
            />

        <ImageView
            android:id="@+id/home02"
            android:onClick="home"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            />

    </RelativeLayout>



</RelativeLayout>




